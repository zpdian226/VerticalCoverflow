<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center">
    <org.zpdian.coverflow.CoverFlow
        android:id="@+id/cover_flow"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_centerHorizontal="true"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="303dip"
        android:layout_centerHorizontal="true">
        <ImageButton
            android:id="@+id/display"
            android:layout_width="42dip"
            android:layout_height="35dip"
            android:padding="11dip"
            android:background="@drawable/btn_left_select"
            android:src="@drawable/common_icon_list_press" 
            android:scaleType="centerInside"/>
        <ImageButton
            android:id="@+id/write"
            android:layout_width="42dip"
            android:layout_height="35dip"
            android:padding="11dip"
            android:background="@drawable/btn_right_select"
            android:src="@drawable/common_icon_compose_press"
            android:scaleType="centerInside"/>
    </LinearLayout>
</RelativeLayout>
